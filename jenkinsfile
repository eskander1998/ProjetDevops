pipeline {

        agent any
        stages {
                stage('check out git'){
                    
                steps{
                        echo 'Pulling...';
                        git branch: 'eskander',
                        url : 'https://github.com/eskander1998/ProjetDevops'
                    }
                }
       
        stage('Testing maven') {
            steps {
                sh """mvn -version"""
                 
            }
        }
       
        stage('MVN CLEAN') {
            steps {
                sh 'mvn clean'
                 
            }
        }
        stage('MVN COMPILE') {
            steps {
                sh 'mvn compile'
                 
            }
            
            stage('MVN SONARQUBE') {
            steps {
                withSonarQubeEnv('sonarqube-8.9') { 
        // If you have configured more than one global server connection, you can specify its name
//      sh "${scannerHome}/bin/sonar-scanner"
        sh "mvn sonar:sonar"
    }
                 
            }
        }
    }
}